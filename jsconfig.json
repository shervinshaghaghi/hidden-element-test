{
	"compilerOptions": {
		"baseUrl": "src",
		"strict": true,
		"noEmit": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
